{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "JSON Feed",
  "description": "JSON Feed Version 1",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "format": "uri",
      "const": "https://jsonfeed.org/version/1"
    },
    "title": {
      "type": "string"
    },
    "home_page_url": {
      "$ref": "#/definitions/uri"
    },
    "feed_url": {
      "$ref": "#/definitions/uri"
    },
    "description": {
      "type": "string"
    },
    "user_comment": {
      "type": "string"
    },
    "next_url": {
      "$ref": "#/definitions/uri"
    },
    "icon": {
      "$ref": "#/definitions/uri"
    },
    "favicon": {
      "$ref": "#/definitions/uri"
    },
    "author": {
      "$ref": "#/definitions/author"
    },
    "expired": {
      "type": "boolean"
    },
    "hubs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/hub"
      }
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/item"
      }
    }
  },
  "patternProperties": {
    "^_\\w[^.]*$": {
      "$ref": "#/definitions/extension"
    }
  },
  "additionalProperties": false,
  "required": ["version", "title", "items"],
  "definitions": {
    "attachment": {
      "type": "object",
      "properties": {
        "url": {
          "$ref": "#/definitions/uri"
        },
        "mime_type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "size_in_bytes": {
          "type": "number"
        },
        "duration_in_seconds": {
          "type": "number"
        }
      },
      "patternProperties": {
        "^_\\w[^.]*$": {
          "$ref": "#/definitions/extension"
        }
      },
      "additionalProperties": false,
      "required": ["url", "mime_type"]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "$ref": "#/definitions/uri"
        },
        "avatar": {
          "$ref": "#/definitions/uri"
        }
      },
      "minProperties": 1,
      "patternProperties": {
        "^_\\w[^.]*$": {
          "$ref": "#/definitions/extension"
        }
      },
      "additionalProperties": false
    },
    "extension": {
      "type": "object",
      "patternProperties": {
        "^[^.]*$": {}
      },
      "additionalProperties": false
    },
    "hub": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "url": {
          "$ref": "#/definitions/uri"
        }
      },
      "patternProperties": {
        "^_\\w[^.]*$": {
          "$ref": "#/definitions/extension"
        }
      },
      "additionalProperties": false,
      "required": ["type", "url"]
    },
    "item": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "url": {
          "$ref": "#/definitions/uri"
        },
        "external_url": {
          "$ref": "#/definitions/uri"
        },
        "title": {
          "type": "string"
        },
        "content_html": {
          "type": "string"
        },
        "content_text": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "image": {
          "$ref": "#/definitions/uri"
        },
        "banner_image": {
          "$ref": "#/definitions/uri"
        },
        "date_published": {
          "type": "string",
          "format": "date-time"
        },
        "date_modified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "$ref": "#/definitions/author"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/attachment"
          }
        }
      },
      "patternProperties": {
        "^_\\w[^.]*$": {
          "$ref": "#/definitions/extension"
        }
      },
      "additionalProperties": false,
      "anyOf": [
        { "required": ["content_html"] },
        { "required": ["content_text"] }
      ],
      "required": ["id"]
    },
    "uri": {
      "type": "string",
      "format": "uri"
    }
  }
}
